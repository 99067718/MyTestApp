<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.NewPage2"
             Title="*Speaks in Morse code*">
    <VerticalStackLayout>
        <Entry MinimumWidthRequest="200" MinimumHeightRequest="100" MaximumWidthRequest="300" x:Name="Text" Placeholder="Type anything in here, it will automatically get translated." PlaceholderColor="Wheat" Text=""/>
        <Button Text="Confirm" Clicked="Button_Clicked"/>
        <HorizontalStackLayout>
            <Label Text="Loop Morse Code" VerticalOptions="Center"/>
            <CheckBox IsChecked="False" x:Name="IsLooping" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>